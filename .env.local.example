# NextAuth Configuration
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=app

# OAuth Providers (Opcional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=
# TWITTER_CLIENT_ID=
# TWITTER_CLIENT_SECRET=

# Email (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM="Productify" <noreply@productify.app>

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379

# Google Gemini API (Backend only - usado pelas rotas API de análise)
# NUNCA use NEXT_PUBLIC_ para API keys sensíveis!
GEMINI_API_KEY=your-gemini-api-key-here
# ou
# GOOGLE_API_KEY=your-google-api-key-here
