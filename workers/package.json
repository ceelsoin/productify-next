{
  "name": "@productify/workers",
  "version": "1.0.0",
  "description": "Workers for processing jobs in Productify",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "orchestrator": "tsx watch src/orchestrator.ts",
    "worker:images": "tsx watch src/workers/image-enhancement.worker.ts",
    "worker:text": "tsx watch src/workers/text-generation.worker.ts",
    "worker:voiceover": "tsx watch src/workers/voiceover.worker.ts",
    "worker:captions": "tsx watch src/workers/caption-generation.worker.ts",
    "worker:video": "tsx watch src/workers/video-generation.worker.ts",
    "worker:all": "concurrently -n orchestrator,images,text,voice,captions,video -c white,cyan,magenta,yellow,green,blue \"npm:orchestrator\" \"npm:worker:images\" \"npm:worker:text\" \"npm:worker:voiceover\" \"npm:worker:captions\" \"npm:worker:video\""
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
